// Application Lifecycle Monitoring
// App starts and shutdowns from OpenTelemetry events
traces
| where message contains "Custom Event: Application_Started" or message contains "Custom Event: Application_Shutdown"
| extend LifecycleEvent = case(
    message contains "Application_Started", "Application Started",
    message contains "Application_Shutdown", "Application Shutdown",
    "Unknown"
)
| summarize Count = count() by LifecycleEvent, bin(timestamp, 1d)
| render timechart
